prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: VLC plugin API
Description: VLC media player plugin interface
Version: 0.9.2
Cflags: -I${includedir} -I${includedir}/vlc/plugins \
	-D_FILE_OFFSET_BITS=64 \
	-D__USE_UNIX98 \
	-D_LARGEFILE64_SOURCE \
	 \
	-D_REENTRANT \
	-D_THREAD_SAFE
Libs: -L${libdir} -lvlccore
